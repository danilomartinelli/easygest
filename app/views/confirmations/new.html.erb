<section class="pt-20 md:pt-26 pb-6 bg-white" style="background-image: url('/assets/pattern-white.svg'); background-position: center;">
  <div class="container px-4 mx-auto">
    <div class="max-w-sm mx-auto">
      <div class="mb-6 text-center">
        <a class="inline-block mb-6" href="#">
          <img class="h-16" src="/assets/smartgest-logo.svg" alt=""></a>
        <h3 class="mb-4 text-2xl md:text-3xl font-bold">Confirme seu Email</h3>
      </div>
      <%= form_with model: @user, url: :confirmation do |form| %>
        <div class="mb-6">
          <%= form.label :email, "Email*", class: "block mb-2 text-coolGray-800 font-medium" %>
          <%= form.email_field :email, required: true, placeholder: "exemplo@email.com.br", class: "appearance-none block w-full p-3 leading-5 text-coolGray-900 border border-coolGray-200 rounded-lg shadow-md placeholder-coolGray-400 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
        </div>
        <%= form.submit "Confirmar Email", class: "inline-block py-3 px-7 mb-4 w-full text-base text-green-50 font-medium text-center leading-6 bg-green-500 hover:bg-green-600 focus:ring-2 focus:ring-green-500 focus:ring-opacity-50 rounded-md shadow-sm" %>
      <% end %>
    </div>
  </div>
</section>